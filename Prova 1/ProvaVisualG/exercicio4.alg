algoritmo "exercicio4"

var

qtdFerraduras: inteiro
precoFerradura: real

valorTotal: real

inicio

precoFerradura <- 5

escreval ("Informe a quantidade de ferraduras que deseja comprar para calcular o valor: ")
leia (qtdFerraduras)

valorTotal <- precoFerradura * qtdFerraduras

escreval ("Valor total a ser pago por " + qtdFerraduras + " ferraduras: R$" + valorTotal + ".")

fimalgoritmo